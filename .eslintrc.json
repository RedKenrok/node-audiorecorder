{
  "env": {
      "es6": true,
      "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "root": true,
  "rules": {
    "no-case-declarations": [
      "off"
    ],
    "no-console": [
      "off"
    ],
    "no-fallthrough": [
      "off"
    ],
    "indent": [
        "error",
        "tab",
        { "SwitchCase": 1 }
    ],
    "linebreak-style": [
        "error",
        "unix"
    ],
    "quotes": [
        "error",
        "single"
    ],
    "semi": [
        "error",
        "always"
    ]
  }
}